<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sharedViewModel"
            type="com.norbertotaveras.todo.viewmodels.SharedViewModel" />

        <variable
            name="todoViewModel"
            type="com.norbertotaveras.todo.viewmodels.TodoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/container_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_discard_bottom_sheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="?attr/actionBarItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/dismiss_bottom_sheet"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_round_close_24"
                    app:tint="@color/color_on_surface_emphasis_disabled" />

                <TextView
                    android:id="@+id/show_completed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="@dimen/task_size"
                    android:paddingVertical="8dp"
                    android:text="Hide completed tasks"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button_discard_bottom_sheet"
                    app:layout_constraintEnd_toStartOf="@+id/show_completed_switch" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/show_completed_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/divider_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/show_completed"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/divider"
                    app:backgroundTint="@color/color_on_surface_divider"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/image_sorting_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_round_reorder_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/scroll_view_sort_at"
                    app:layout_constraintBottom_toBottomOf="@+id/scroll_view_sort_at"
                    app:tint="?attr/colorOnSurface" />

                <HorizontalScrollView
                    android:id="@+id/scroll_view_sort_at"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:minHeight="48dp"
                    android:paddingVertical="2dp"
                    android:clipToPadding="false"
                    android:scrollbars="none"
                    android:requiresFadingEdge="horizontal"
                    android:fadingEdgeLength="24dp"
                    android:overScrollMode="never"
                    android:contentDescription="@string/set_list_sort_order"
                    app:layout_constraintStart_toEndOf="@id/image_sorting_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_1">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_sort_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:scrollbars="none"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/high_choice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="High"
                            android:checked="true"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/design_default_color_secondary" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/medium_choice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Medium"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/design_default_color_secondary" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/low_choice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Low"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/design_default_color_secondary" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/title_choice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Title"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/design_default_color_secondary" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Date"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/design_default_color_secondary" />
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
